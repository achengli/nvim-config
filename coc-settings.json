{
    "languageserver" : {
        "lua": {
            "command" : "/usr/local/bin/lua-lsp", 
            "filetypes": ["lua"],
            "settings": {
                "Lua": {
                    "workspace.library": {
                        "/usr/share/nvim/runtime/lua": true,
                        "/usr/share/nvim/runtime/lua/vim": true,
                        "/usr/share/nvim/runtime/lua/vim/lsp": true,
                        "/usr/share/lua/5.3": true,
                        "/usr/share/lua/5.3/cjson": true,
                        "/usr/local/share/luakit/lib": true,
                    },
                    "diagnostics": {
                        "globals": ["vim"]
                    }
                }
            }
        }
    }
}

